<h1 class="text-muted text-center pt-3">Register</h1>
{{>_alert}}
<div class="row col-md-8 offset-md-2 pt-3">
    <form action="/auth/register" method="POST">
    <div class="form-row">
        <div class="form-group col">
            <label for="firstName">First name</label>
            <input type="text" name="firstName" id="firstName" class="form-control" {{#if userInput}}value="{{userInput.firstName}}"{{/if}}>
        </div>
        <div class="form-group col">
            <label for="lastName">Last name</label>
            <input type="text" name="lastName" id="lastName" class="form-control" {{#if userInput}}value="{{userInput.lastName}}"{{/if}}>
        </div>
    </div>
    <div class="form-group ">
        <label for="email">Email Address</label>
        <input type="email" name="email" id="email" class="form-control" {{#if userInput}}value="{{userInput.email}}"{{/if}}>
    </div>
    <div class="form-group ">
        <label for="password">password </label>
        <input type="password" name="password" id="password" class="form-control" {{#if userInput}}value="{{userInput.password}}"{{/if}}>
    </div>
    <div class="form-group pb-3">
        <label for="confirmPassword">Confirm Password </label>
        <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" {{#if userInput}}value="{{userInput.confirmPassword}}"{{/if}}>
    </div>
    <input type="submit" class="btn btn-success " value="Register">
</form>
</div>