{{>_alert}}
<form action="/ideas" method="POST">
    <div class="form-group py-5">
        <label for="title" class="text-dark text-bold">title</label>
        <input type="text" class="form-control" name="title" id="title" {{#if ideaInput.title}} value={{ideaInput.title}}{{/if}}>
    </div>
    <div class="form-group">
        <label for="description" class="text-dark text-bold">description</label>
        <textarea type="text" class="form-control" name="description" id="description" rows="5">{{#if ideaInput.description}}{{ideaInput.description}} {{/if}}</textarea>
    </div>
     <div class="form-group py-3" >
        <label for="status" class="text-dark text-bold">status</label>
        <select name="status" id="status" class="px-2">
            <option value="public" {{#if ideaInput.status}} {{compareValues "public" ideaInput.status}} {{/if}}>public</option>
            <option value="private" {{#if ideaInput.status}} {{compareValues "private" ideaInput.status}} {{/if}}>private</option>
        </select>
    </div>

     <div class="form-group py-5">
        <label for="tags" class="text-dark text-bold">Tags :</label>
        <input type="text" data-role="tagsinput"  class="form-control"  name="tags" id="tags">
    </div>

    <div class="form-check">
        <input type="checkbox" name="allowComment" id="allowComments" class="form-check-input" {{#if allowComment}}check="true"{{/if}}>
        <label for="allowComments" class="form-check-label">Comments</label>
    </div>
    <button disabled style="display: none;"  type="submit">Submit</button>

    <button class="btn btn-primary mt-4" type="submit">Submit</button>

</form>