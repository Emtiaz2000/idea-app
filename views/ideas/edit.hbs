{{>_alert}}
<form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
    <div class="form-group py-5">
        <label for="title" class="text-dark text-bold">title</label>
        <input type="text" class="form-control" name="title" id="title" value="{{idea.title}}">
    </div>
    <div class="form-group">
        <label for="description" class="text-dark text-bold">description</label>
        <textarea type="text" class="form-control" name="description" id="description" rows="5"> {{idea.description}} </textarea>
    </div>
     <div class="form-group py-3" >
        <label for="status" class="text-dark text-bold">status</label>
        <select name="status" id="status" class="px-2" >
            <option value="public" {{compareValues "public" idea.status}}>public</option>
            <option value="private" {{compareValues "private" idea.status}}>private</option>
        </select>
    </div>

     <div class="form-group py-5">
        <label for="tags" class="text-dark text-bold">Tags :</label>
        <input type="text" data-role="tagsinput"  class="form-control" name="tags" id="tags" value="{{idea.tags}}">
    </div>
    <div class="form-check">
        <input type="checkbox" name="allowComment" id="allowComments" class="form-check-input" {{#if idea.allowComment}} checked="true"{{/if}}>
        <label for="allowComments" class="form-check-label">Comments</label>
    </div>
    <button disabled style="display: none;"  type="submit">Submit</button>
    <button class="btn btn-primary mt-4" type="submit">Update</button>

</form>